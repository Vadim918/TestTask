@model TestTaskBus1.Models.ViewModels.UrlEditModel
@{
    ViewBag.Title = "Add URL";
}

<div class="card">
    <div class="card-header">
        <h3>Add URL</h3>
    </div>
    <form asp-action="Add">

        <div class="card-body">
            <div class="form-group">
                <label asp-for="LongUrl"></label>
                <input asp-for="LongUrl" class="form-control"/>
                <span asp-validation-for="LongUrl" class="text-danger"></span>
            </div>
        </div>
        <div class="card-footer">
            <input type="submit" class="btn btn-primary" value="Save"/>
            <a asp-action="Index" class="btn btn-secondary">Return to list</a>
        </div>
    </form>
</div>